{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "projects": {
    "react-toolbox": {
      "root": "packages/react-toolbox",
      "targets": {
        "build": {
          "executor": "nx:run-commands",
          "options": {
            "command": "npm run build",
            "cwd": "packages/my-react-library"
          }
        },
        "test": {
          "executor": "nx:run-commands",
          "options": {
            "command": "npm test",
            "cwd": "packages/my-react-library"
          }
        }
      }
    }
  }
}
