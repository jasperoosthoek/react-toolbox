{
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "src/examples/**/*",
    "dist",
    "dist-examples"
  ],
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react-jsx",
    "module": "es6",
    "target": "es2015",
    "downlevelIteration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  }
}
